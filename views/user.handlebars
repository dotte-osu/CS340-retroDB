<div class="container">
    <div class="row gutters-sm">
        <div class="col-xl-3 col-lg-4 mb-3">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="/images/favicon.ico" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h4>{{username}}</h4>
                            <p class="text-secondary mb-1">{{firstName}} {{lastName}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-8 mb-3">
            <h4 class="">Lists</h4>
            <div class="list-group mb-3">
                {{#each lists}}
                    <a href="/list?q={{this.listID}}" class="list-group-item list-group-item-action">{{this.listName}}
                        {{#if ../myPage}}
                            <span class="float-right">
                                <form action="/user/delete" method="post">
                                    <input type="hidden" name="listID" value="{{this.listID}}">
                                    <button class="btn btn-danger">Delete List</button>
                                </form>
                            </span>
                        {{/if}}
                    </a>
                {{/each}}
            </div>
                {{#if myPage}}
                <a href="/list/create?user={{user}}" class="btn btn-secondary">New List</a>
                {{/if}}
        </div>

    </div>
</div>
