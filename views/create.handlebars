<div class="container">
    <h1>New List</h1>
    <form action="/list/create" method="post">

        {{!-- list name --}}
        <div class="form-group">
            <label for="listName">List name</label>
            <input type="text" id="listName" name="listName" class="form-control">
        </div>

        {{!-- dropdown for game --}}
        <div class="form-group">
            <label for="game">Add games</label>
            <div class="row">
                <div class="col-sm-10 mb-3">
                    <select name="game" id="game" class="form-control form-select">
                        <option value="1">Mario Kart 64</option>
                        <option value="2">Super Smash Bros. Melee</option>
                    </select>
                </div>
                <div class="col-sm-2 mb-3">
                    <input type="button" value="Delete" class="btn btn-danger"></input>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="button" value="Add another game" class="btn btn-secondary"></input>
        </div>
        
        <button role="submit" class="btn btn-success">Create list</button>
    </form>
</div>