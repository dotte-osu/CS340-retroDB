<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-nav">
        <a class="navbar-brand brand" href="/">retroDB</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse offset" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item {{#if browse}}active{{/if}}">
                    <a class="nav-link" href="/results">Browse</a>
                </li>
                <li class="nav-item {{#if user}}active{{/if}}">
                    <a class="nav-link" href="/user">My Page</a>
                </li>
               
                <li class="nav-item {{#if admin}}active{{/if}}">
                    <a class="nav-link" href="/admin">Admin</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                {{#unless user}}
                <li class="nav-item {{#if login}}active{{/if}}">
                    <a class="nav-link" href="/user/login">Log In</a>
                </li>
                <li class="nav-item {{#if register}}active{{/if}}">
                    <a class="nav-link" href="/user/register">Register</a>
                </li>
                {{/unless}}
                {{#if user}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown">{{user}}</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/user/logout" style="color: inherit;">Log Out</a>
                    </div>
                </li>
                {{/if}}
            </ul>
        </div>
    </nav>
</header>